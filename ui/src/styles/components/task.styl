.tasks-container
	width 80%
	margin auto
	h1
		background-color #26a69a
		color #fff
		width 100%
		padding 20px
		box-shadow 0 8px 10px 1px rgba(0,0,0,0.14), 0 3px 14px 2px rgba(0,0,0,0.12), 0 5px 5px -3px rgba(0,0,0,0.3)
		text-transform uppercase


.task-completed
	text-decoration line-through

.task-form
	.input-control
		width 100%
		height 31px
		font-size 16px
		border-radius 5px
		border none
		color #888
		padding 5px
		margin-left 10px
.task-list
	list-style none
	li
		padding 10px
		border-bottom 1px solid #cecece

.task-datetime
	color #888
	float right
	font-size 12px

.btn-delete
	background transparent
	border none
	float right
	margin-left 15px
	color #F44336
	margin-top -5px
	font-size 16px

.completed-title
	background-color #26a69a
	color #fff
	width 100%
	padding 10px
	box-shadow 0 8px 10px 1px rgba(0,0,0,0.14), 0 3px 14px 2px rgba(0,0,0,0.12), 0 5px 5px -3px rgba(0,0,0,0.3)
	text-transform uppercase
